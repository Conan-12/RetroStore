<UserControl x:Class="RetroStoreEsc.Vistas.ObjetoCategoria"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetroStoreEsc.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="290.74" d:DesignWidth="233.2" Background="#FFFEF8F8">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="txtNombreCategotia" FontSize="28" HorizontalContentAlignment="Center"
               Grid.Column="0" Grid.Row="0"/>
        <Button x:Name="btnCategoria" Click="btnCategoria_Click"
                Grid.Column="0" Grid.Row="1">
            <Button.Background>
                <ImageBrush x:Name="imagenBtn" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
