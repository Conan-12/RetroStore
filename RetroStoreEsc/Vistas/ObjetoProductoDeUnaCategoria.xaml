<UserControl x:Class="RetroStoreEsc.Vistas.ObjetoProductoDeUnaCategoria"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetroStoreEsc.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="390.74" d:DesignWidth="301.5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="301.5"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnProducto" Grid.Column="0" Grid.Row="0" Click="btnProducto_Click">

            <Button.Background>
                <ImageBrush x:Name="imagenBtn" Stretch="UniformToFill"/>
            </Button.Background>

        </Button>

        <Label x:Name="txtModelo" Grid.Row="1" FontSize="11"/>
        <Label x:Name="txtPrecio" Grid.Row="2" FontSize="11"/>
        <Label x:Name="txtStock" Grid.Row="3" FontSize="11"/>

    </Grid>
</UserControl>
